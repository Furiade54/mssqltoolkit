{
  "name": "mssql-tool-kit",
  "private": true,
  "version": "0.0.6",
  "type": "module",
  "main": "electron-main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "electron": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron ./electron-main.cjs",
    "electron:dev": "concurrently \"npm:dev\" \"npm:electron\"",
    "pack": "electron-builder --dir",
    "dist:win": "electron-builder --win --publish never",
    "release:win": "electron-builder --win --publish always"
  },
  "dependencies": {
    "electron-log": "^5.1.2",
    "electron-updater": "^6.3.9",
    "mssql": "^12.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.2",
    "vite": "^5.4.8"
  },
  "build": {
    "appId": "com.mssqltoolkit.app",
    "productName": "MSSQL Tool Kit",
    "directories": {
      "output": "dist-release"
    },
    "files": [
      "dist/**",
      "electron-main.cjs",
      "preload.cjs",
      "package.json"
    ],
    "asar": true,
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "shortcutName": "MSSQL Tool Kit"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Furiade54",
        "repo": "mssqltoolkit",
        "releaseType": "release"
      }
    ]
  }
}
